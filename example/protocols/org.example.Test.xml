<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN" "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node>
  <interface name="org.example.Test">
    <!-- methods -->
    <method name="Ping">
      <arg direction="in" type="s" name="message"/>
      <arg direction="out" type="s" name="response"/>
    </method>

    <!-- signals -->
    <signal name="Alert">
      <arg type="s" name="alertMessage"/>
    </signal>

    <!-- properties -->
    <property name="property1" type="s" access="readwrite"/>
    <property name="property2" type="v" access="readwrite"/>
  </interface>
</node>
